<% if resource.errors.any? %>
  <div id="error_explanation">
    <div class="">
      <div class="flex bg-red-100 leading-none text-red-700 p-2 shadow text-teal text-sm">
        <div class="flex bg-red-700 text-white rounded-full h-6 px-3 items-center">Alert</div>
        <div class="flex flex-col space-y-2">
          <div class="flex-1 px-2 leading-6 font-medium">
            <%= I18n.t("errors.messages.not_saved",
                  count: resource.errors.count,
                  resource: resource.class.model_name.human.downcase)
            %>
          </div>
          <% resource.errors.full_messages.each do |message| %>
            <div class="flex-1 px-2 leading-6 font-medium"><%= message %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
