
<% if notice %> 
  <div class=""> 
    <div class="flex bg-green-100 leading-none text-green-700 p-2 shadow text-teal text-sm">
      <div class="flex bg-green-700 text-white rounded-full h-6 px-3 items-center">Success</div>
      <div class="flex flex-col space-y-2 items-center">
        <span class="flex-1 px-2 leading-6 font-medium"><%= notice %></span>
      </div>
    </div>
  </div>
<% end %>

<% if alert %>
  <div class="">
    <div class="flex bg-red-100 leading-none text-red-700 p-2 shadow text-teal text-sm">
      <div class="flex bg-red-700 text-white rounded-full h-6 px-3 items-center">Alert</div>
      <div class="flex flex-col space-y-2">
        <span class="flex-1 px-2 leading-6 font-medium"><%= alert %></span>
      </div>
    </div>
  </div>
<% end %>
